{
  "name": "polkadot-education",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.1.29",
  "scripts": {
    "build-storybook": "storybook build",
    "build": "next build",
    "compose": "docker compose --profile slim",
    "compose-all": "docker compose --profile default",
    "compose-test": "docker compose -f docker-compose.yaml -f docker-compose.test.yaml --profile slim",
    "db:drop:all": "bun run seed/cli.ts drop:all",
    "db:drop:courses": "bun run seed/cli.ts drop:courses",
    "db:reset": "bun run seed/cli.ts reset",
    "db:reset:partial": "bun run seed/cli.ts reset:partial",
    "db:seed:all": "bun run seed/cli.ts seed:all",
    "db:seed:courses:choices": "bun run seed/cli.ts seed:courses:choices",
    "db:seed:courses": "bun run seed/cli.ts seed:courses",
    "dev": "next dev",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "pull": "git pull && git submodule foreach git pull origin main",
    "postinstall": "papi",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "test": "NODE_ENV=test cypress run",
    "test:open": "NODE_ENV=test cypress open",
    "test:regular": "NODE_ENV=test cypress run --spec 'cypress/e2e/!(backoffice).cy.ts'",
    "test:backoffice": "NODE_ENV=test cypress run --spec 'cypress/e2e/backoffice.cy.ts'",
    "type-check": "tsc --noEmit",
    "wait": "wait-on http://localhost:3000"
  },
